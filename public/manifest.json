{
  "manifest_version": 3,
  "name": "Crossie",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "type": "module",
      "run_at": "document_end"
      
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "frame.html", 
        "auth.html",
        "shared/authService.js",
        "chunks/.js",
        ".js", 
        "*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "auth.html",
    "default_title": "Crossie"
  }
}